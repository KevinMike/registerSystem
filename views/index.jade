extends layout
block stylesheet


block content
    .container(ng-app='registerApp')
        include modals/registerAssistantModal
        .row(style='text-align:center')
            h1= title
            p Registro de Asistencia
            br
            .box(ng-controller='registerController')
                form(ng-submit='submitRegisterForm()')
                    .form-group
                        label Ingrese el DNI
                        input#dniInput.form-control.btn-register(type='text',name='dni',ng-model='registerData.dni',required)
                    input#registerButton.btn.btn-primary(type='submit',value='Registrar',ladda='loading',style='width:100%')

block javascripts
    script(src='/javascripts/register.js')
